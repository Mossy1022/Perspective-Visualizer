# ---- Core App Limits ----
MAX_UPLOAD_SIZE=104857600            # bytes; 100 MB hard‑cap for file uploads
DEFAULT_MEMORY_LIMIT=512m            # container memory limit (docker‑compose uses it)

# ---- Security Switches ----
ENABLE_NO_NEW_PRIVILEGES=true        # maps to `--security-opt no-new-privileges:true`
SBOM_POLICY=strict                   # ‘strict’ | ‘warn’ | ‘off’

# ---- Paths ----
KEY_BACKUP_DIR=/data/backup

# ---- Telemetry ----
ENABLE_TELEMETRY=false

# ---- Observability ----
GRAFANA_ADMIN_PASSWORD=changeme

# ---- External API Keys ----
OPENAI_API_KEY=
